{
    "env": {
      "commonjs": true,
      "es2020": true,
      "node": true,
      "mocha": true
    },
    
    "extends": [
        "prettier", 
        "airbnb-base"
      ],
    "plugins": [
        "prettier"
      ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
              "endOfLine": "auto"
            }
          ],
          "linebreak-style": 0,
          "trailing-comma": 0,
          "comma-dangle": 0,
          "no-underscore-dangle": 0,
          "no-unused-vars": [
            "error",
            {
              "varsIgnorePattern": "[iI]gnored"
            }
          ],
          "import/no-extraneous-dependencies": [
            "error",
            {
              "devDependencies": true
            }
          ],
          "no-plusplus": [2, { "allowForLoopAfterthoughts": true }],
          "object-curly-newline"       : [0, {
            "ObjectExpression" : {
                "multiline"     : true,
                "minProperties" : 2,
                "consistent"    : true
            },
            "ObjectPattern" : {
                "multiline"     : true,
                "minProperties" : 4,
                "consistent"    : true
            },
            "ImportDeclaration" : {
                "multiline"     : true,
                "minProperties" : 4,
                "consistent"    : true
            },
            "ExportDeclaration" : {
                "multiline"     : true,
                "minProperties" : 2,
                "consistent"    : true
            }
        }]
    }
}
